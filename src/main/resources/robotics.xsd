<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xsd:schema xmlns:ROS="robotics" xmlns:ecore="http://www.eclipse.org/emf/2002/Ecore" xmlns:ros2SWCInterface="robotics" xmlns:xsd="http://www.w3.org/2001/XMLSchema"  targetNamespace="robotics">
  
  <xsd:element name="Node" type="ros2SWCInterface:Node" abstract="true"/>
  <xsd:element name="CompositionMasterNode" type="ros2SWCInterface:CompositionMasterNode" abstract="true"/>
  <xsd:element name="AtomicNode" type="ros2SWCInterface:AtomicNode" abstract="true"/>
  <xsd:element name="ServiceClientServerInterface" type="ros2SWCInterface:ServiceClientServerInterface" abstract="true"/>
  <xsd:element name="DataInterfaceTopic" type="ros2SWCInterface:DataInterfaceTopic" abstract="true"/>
  <xsd:complexType name="Node" abstract="true">
    <xsd:complexContent>
      <xsd:extension base="ros2SWCInterface:CompositionMasterNode">
        <xsd:attribute name="componentspec" xml:base="string" use="required"/>
			</xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>
  <xsd:complexType name="CompositionMasterNode">
    <xsd:attribute name="register_publisher" xml:base="String" use="required"/>
    <xsd:attribute name="register_subscriber" xml:base="String" use="required"/>
  </xsd:complexType>
  <xsd:complexType name="AtomicNode">
    <xsd:sequence>
      <xsd:element name="Node1" minOccurs="0"  type="ros2SWCInterface:CompositionMasterNode"/>
    </xsd:sequence>
    <xsd:attribute name="Controlflow"  type="xsd:anyURI"/>
    <xsd:attribute name="Dataflow"  type="xsd:anyURI"/>
      </xsd:complexType>
  <xsd:complexType name="ServiceClientServerInterface">
    <xsd:annotation>
      <xsd:appinfo  source="tags">
        <operation name="RequestReplyOperation"/>
      </xsd:appinfo>
    </xsd:annotation>
  		   </xsd:complexType>
  <xsd:complexType name="DataInterfaceTopic">
    <xsd:attribute name="ros_publish"  xml:base="String" use="required"/>
    <xsd:attribute name="ros_subscribe" xml:base="String" use="required"/>
    </xsd:complexType>
  <xsd:simpleType xml:base="VariableDataPrototype" name="DataPrototype">
    <xsd:restriction base="xsd:string"/>
  </xsd:simpleType>
</xsd:schema>
